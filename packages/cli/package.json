{
  "name": "@graphql-reshape/cli",
  "description": "A cli for quickly applying custom directives to your graphql schema files",
  "version": "0.5.2",
  "author": {
    "name": "Kyle Scully",
    "url": "https://github.com/zieka"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "reshape": "./index.js"
  },
  "keywords": [
    "graphql",
    "reshape",
    "cli",
    "cli",
    "@graphql-reshape",
    "@graphql-reshape/cli",
    "mod",
    "schema"
  ],
  "license": "MIT",
  "repository": "https://github.com/zieka/graphql-reshape/tree/master/packages/cli",
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "prettier-check": "prettier --config package.json --list-different '{,**/}*.{js,ts,json,graphql}'",
    "prettier-format": "prettier --config package.json --write '{,**/}*.{js,ts,json,graphql}'"
  },
  "preferGlobal": true,
  "dependencies": {
    "@graphql-reshape/transformers": "file:../transformers",
    "chalk": "2.4.2",
    "commander": "2.19.0",
    "globby": "9.2.0",
    "graphql": "14.2.1",
    "inquirer": "6.2.2",
    "typescript": "3.4.5"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  }
}
